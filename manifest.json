{
    "name": "TruthLens",
    "version": "0.1.0",
    "description": "fact-checking misinformation",
    "permissions": ["storage","activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["popup.css"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/bookmark.png",
          "assets/play.png",
          "assets/delete.png",
          "assets/save.png",
          "popup.css"
        ],
        "matches": ["<all_urls>"]
      }
    ],
   
    "action": {
      "default_icon": {
        "16": "assets/icon.png",
        "24": "assets/icon.png",
        "32": "assets/icon.png"
      },
      "default_title": "TruthLens",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}
